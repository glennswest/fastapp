<div class="crumbs">
  Database
</div>
<h2>Collections</h2>
<% if collections.empty? %>
  <%= "No Collections" %>
<% else %>
  <% collections.each do |c| %>
    <div><a href="/<%=c.name %>"><%= c.name %></a></div>
  <% end %>
<% end %>
<h2>New Collection</h2>
<form action="/" method="POST">
<input type="text" id="collection_name" name="collection[name]" placeholder="New Collection Name">
<input type="submit" value="Create">
</form>
